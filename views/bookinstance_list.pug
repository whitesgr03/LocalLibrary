extends layout

block content 
    h1= title

    if bookinstance_list.length
        ul
            each item in bookinstance_list
                li 
                    a(href=item.url) #{item.book.title} : #{item.imprint}
                if item.status == 'Available'
                    span.text-success #{item.status}
                else if item.status == 'Maintenance'
                    span.text-danger #{item.status}
                else 
                    span.text-warning #{item.status}

                if item.status != 'Available'
                    span (Due: #{item.due_back_formatted})
                hr
    else
        p There are no book copies in this library.